-- Using your TUI color scheme



vim.o.cursorline = 1
vim.api.nvim_set_hl(0, 'LineNr',		{ ctermfg = "DarkGrey"  } )
vim.api.nvim_set_hl(0, 'CursorLineNr',	{ ctermfg = "White" } )
vim.api.nvim_set_hl(0, 'CursorLine', { } ) -- disable cursor underline

vim.api.nvim_set_hl(0, 'Search',		{ ctermbg = "DarkGrey", ctermfg = "White" } )
vim.api.nvim_set_hl(0, 'IncSearch',		{ ctermbg = "DarkGrey", ctermfg = "LightCyan" } )

vim.api.nvim_set_hl(0, 'MatchParen',	{ bold = 1, underline = 1 } )

vim.api.nvim_set_hl(0, 'Special',		{ ctermfg = Normal } )
